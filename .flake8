[flake8]
show-source = True
statistics = True

application-import-names = src,tests
import-order-style = google

max-line-length = 100

max-complexity = 10

exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.pyc,
    *.egg-info,
    .cache,
    .eggs,
    .venv,
    venv,
    env,
    migrations

ignore =
    E203,
    W503,
    E402,
    E501,
    D100,D101,D102,D103,D104

docstring-convention = google

inline-quotes = single
multiline-quotes = double
docstring-quotes = double

select = B,C,E,F,W,T4,B9

max-error-rate = 0.0